@using HabitTrackerWebApp.Models
@{
    ViewData["Title"] = "Index";
}

@model List<HabitToTrack>

<h1>Habit Tracker</h1>
<table>
    <thead>
        <tr>
            <th></th>
            <th>@DateOnly.FromDateTime(DateTime.Now).ToString("dd MMM")</th>
            <th>@DateOnly.FromDateTime(DateTime.Now).AddDays(1).ToString("dd MMM")</th>
            <th>@DateOnly.FromDateTime(DateTime.Now).AddDays(2).ToString("dd MMM")</th>
            <th>@DateOnly.FromDateTime(DateTime.Now).AddDays(3).ToString("dd MMM")</th>
            <th>@DateOnly.FromDateTime(DateTime.Now).AddDays(4).ToString("dd MMM")</th>
            <th>@DateOnly.FromDateTime(DateTime.Now).AddDays(5).ToString("dd MMM")</th>
            <th>@DateOnly.FromDateTime(DateTime.Now).AddDays(6).ToString("dd MMM")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var habit in Model)
        {
            <tr>
                <td>@habit.Name</td>
                <td>- [ ]</td>
                <td>- [ ]</td>
                <td>- [ ]</td>
                <td>- [ ]</td>
                <td>- [ ]</td>
                <td>- [ ]</td>
                <td>- [ ]</td>
            </tr>
        }
    </tbody>
</table>